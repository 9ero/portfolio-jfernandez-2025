---
import { Spotlight } from "@/components/ui/spotlight-new";
import { TextGenerateEffect } from "@/components/ui/text-generate-effect";
const content =  `Full stack developer with 2+ years of experience in React and 1+ year in Django.\nAlso skilled in MySQL, Docker, AWS, and always expanding my tech stack.`
---

    <div class="h-full w-full sm:rounded-l-md flex items-center md:justify-center bg-gradient-to-b from-zinc-950 to-sky-500 dark:bg-none dark:from-none dark:to-none dark:bg-background  antialiased bg-grid-white/[0.02] relative overflow-hidden">
      <Spotlight client:load/>
      <div class=" p-4 max-w-7xl  mx-auto relative z-10  w-full pt-20 md:pt-0">
        <h1 class="text-4xl md:text-7xl font-bold text-center bg-clip-text text-transparent bg-gradient-to-b from-lime-200 to-green-400 dark:from-sky-50 dark:to-sky-300 bg-opacity-50">
          Hello <br /> I'm Juan Miguel
        </h1>
        <p class="mt-4 w-full font-normal text-base text-neutral-200 dark:text-neutral-300 ">
          <TextGenerateEffect  words={content} client:only="react"/>
        </p>
      </div>
    </div>
  

